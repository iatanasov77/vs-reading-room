{% for suggest in bookSuggestions | slice( 0, 4 ) %}
    {% if suggest.getPicture( 'product_thumbnail' ) %}
        {% set bookThumbnail = suggest.getPicture( 'product_thumbnail' ) %}
    {% endif %}

    <div class="product-item">
        <figure class="product-style">
            <a href="{{ path( 'vs_catalog_catalog_product_show', {'categorySlug': 'latest', 'productSlug': suggest.slug} ) }}">
                <img src="{{ bookThumbnail.path | imagine_filter( 'index_page_thumbnail' ) }}"
                    alt="Books"
                    class="product-item"
                >
            </a>
            {#
            <button type="button" class="add-to-cart" data-product-tile="add-to-cart">
                Add to Cart
            </button>
            #}
        </figure>
        
        <figcaption>
            <a href="{{ path( 'vs_catalog_catalog_product_show', {'categorySlug': 'latest', 'productSlug': suggest.slug} ) }}">
                <h3>{{ suggest.name }}</h3>
            </a>
            <span>
                {% if suggest.authors.first %}
                    <a href="{{ path( 'app_reading_room_author_details', {'slug': suggest.authors.first.slug} ) }}">
                        {{ suggest.authors.first.name }}
                    </a>
                {% endif %}
            </span>
            {#
            <div class="item-price">
                <span class="prev-price">$ 50.00</span>$ 40.00
            </div>
            #}
        </figcaption>
    </div>
{% endfor %}