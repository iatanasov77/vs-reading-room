{% extends "base.html.twig" %}

{% block breadcrumbs %}
    {{ parent() }}
    <span class="item colored">{{ resource.title }}</span>
{% endblock %}

{% block content %}
    <!-- page title -->
    <div class="site-banner">
        <div class="banner-content">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="colored">
                            <h1 class="page-title">{{ resource.title }}</h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end page title -->
    
    <!-- privacy -->
    <section class="chief-detail padding-medium">
        <div class="container">
            <div class="row">
                <div class="single-image col-md-12">
                    {{ resource.text | raw }}
                </div>
            </div>
        </div>
    </section>
    <!-- end privacy -->
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    
    {{ encore_entry_link_tags( 'js/static-page', null, 'BooksawBookStore' ) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    
    {{ encore_entry_script_tags( 'js/static-page', null, 'BooksawBookStore' ) }}
{% endblock %}
