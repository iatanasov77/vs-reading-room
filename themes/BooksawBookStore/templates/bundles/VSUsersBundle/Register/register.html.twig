{% extends 'base-login.html.twig' %}

{% block content %}
    <!-- registration form -->
    {{ form_start(form, { 'attr': {'class': 'sign__form registration_form', 'id': 'registration-form'} }) }}
        <a href="{{ path( 'app_home' ) }}" class="sign__logo">
            {{ applicationTitle | trans( {},'ReadingRoom' ) }}
        </a>
        
        {% if formErrors.count %}
            <ul class="sign__group sign__errors">
                {% for error in formErrors %}
                    <li>
                        {{ error.message }}
                    </li>
                {% endfor %}
            </ul>
        {% endif %}
        
        {{ form_widget( form._token ) }}
        
        <div class="sign__group">
            {{ form_widget(form.firstName, {'attr': {'class': 'sign__input', 'placeholder': form.firstName.vars.label }}) }}
        </div>
        
        <div class="sign__group">
            {{ form_widget(form.lastName, {'attr': {'class': 'sign__input', 'placeholder': form.lastName.vars.label }}) }}
        </div>
        
        <div class="sign__group">
            {{ form_widget( form.email, {'attr': {'class': 'sign__input', 'placeholder': form.email.vars.label}} ) }}
        </div>
                    
        <div class="sign__group mt-3">
            {{ form_widget( form.plain_password.first, {'attr': {'class': 'sign__input', 'placeholder': form.plain_password.first.vars.label}} ) }}
        </div>
        
        <div class="sign__group">
            {{ form_widget( form.plain_password.second, {'attr': {'class': 'sign__input', 'placeholder': form.plain_password.second.vars.label}} ) }}
        </div>
        
        <div class="sign__group">
            {{ form_label(form.prefered_locale, null, {'label_attr': {'class': 'sign__label'}}) }}
            {{ form_widget( form.prefered_locale, {'attr': {'class': 'sign__select', 'placeholder': form.prefered_locale.vars.label}} ) }}
        </div>
        
        <div class="sign__group sign__group--checkbox">
            <input id="remember" name="remember" type="checkbox" required="required">
            <label for="remember">{{ 'reading_room.template.register.i_agree_to_the' | trans( {},'ReadingRoom' ) }} 
                <a href="{{ path( 'vs_cms_pages_show_by_slug', {'slug': 'privacy-policy'} ) }}">
                    {{ 'reading_room.template.register.privacy_policy' | trans( {},'ReadingRoom' ) }}
                </a>
            </label>    
        </div>
        
        <button class="sign__btn" type="submit"><span>{{ 'reading_room.template.register.sign_up' | trans( {},'ReadingRoom' ) }}</span></button>

        <span class="sign__text">{{ 'reading_room.template.register.already_have_an_account' | trans( {},'ReadingRoom' ) }} 
            <a href="{{ path( 'app_login' ) }}">
                {{ 'reading_room.template.register.sign_in' | trans( {},'ReadingRoom' ) }}
            </a>
        </span>
    {{ form_end(form, {'render_rest': false}) }}
    <!-- registration form -->
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    
    {{ encore_entry_link_tags( 'js/static-page', null, 'BooksawBookStore' ) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    
    {{ encore_entry_script_tags( 'js/static-page', null, 'BooksawBookStore' ) }}
{% endblock %}
