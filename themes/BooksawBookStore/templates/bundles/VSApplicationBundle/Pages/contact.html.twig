{% extends "base.html.twig" %}

{% block content %}
    <section>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="page-title">{{ 'reading_room.template.contact_us' | trans( {},'ReadingRoom' ) }}</h1>
                    {{ knp_menu_render('breadcrumbs', {'template': 'menu/breadcrumb.html.twig'}) }}
                </div>
            </div>
        </div>
    </section>
    
    <section class="contact-information padding-medium mt-3">
        <div class="container">
            <div class="row g-5">
                <div class="col-md-6 mb-3">

                    <h2>{{ 'reading_room.template.get_in_touch' | trans( {},'ReadingRoom' ) }}</h2>

                    <div class="contact-detail d-flex flex-wrap mt-4">
                        <div class="detail mr-6 mb-4">
                            <p>{{ 'reading_room.template.get_in_touch_description' | trans( {},'ReadingRoom' ) }}</p>
                            <ul class="list-unstyled list-icon">
                                {% if showPhone %}
                                    <li><i class="icon icon-phone"></i>+1650-243-0000</li>
                                {% endif %}
                                <li>
                                    <i class="icon icon-envelope-o"></i>
                                    <a href="mailto:info@yourcompany.com">{{ contactEmail }}</a>
                                </li>
                                {% if showAddress %}
                                    <li><i class="icon icon-location2"></i>North Melbourne VIC 3051, Australia</li>
                                {% endif %}
                            </ul>
                        </div><!--detail-->
                        <div class="detail mb-4">
                            <h3>Social Links</h3>
                            <div class="social-links flex-container">
                                <a href="#" class="icon icon-facebook"></a>
                                <a href="#" class="icon icon-twitter"></a>
                                <a href="#" class="icon icon-pinterest-p"></a>
                                <a href="#" class="icon icon-youtube"></a>
                                <a href="#" class="icon icon-linkedin"></a>
                            </div><!--social-links-->
                        </div><!--detail-->

                    </div><!--contact-detail-->
                </div><!--col-md-6-->

                <div class="col-md-6">

                    <div class="contact-information">
                        <h2>{{ 'reading_room.template.send_a_message' | trans( {},'ReadingRoom' ) }}</h2>
                        
                        {{ form_start(form, { 'attr': {'class': 'form-group contact-form mt-4'} }) }}
                            {{ form_widget(form._token) }}
    
                            <div class="row">
                                <div class="col-md-6">
                                    {# {{ form_label(form.name) }} <-- just dont include this #}
                                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                                </div>
                                <div class="col-md-6">
                                    {# {{ form_label(form.email) }} <-- just dont include this #} 
                                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-12">
                                    {# {{ form_label(form.subject) }} <-- just dont include this #} 
                                    {{ form_widget(form.subject, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-12">
                                    {# {{ form_label(form.message) }} <-- just dont include this #} 
                                    {{ form_widget(form.message, {'attr': {'class': 'form-control contact-message', 'rows': '5'}}) }}
                                </div>
                                
                                <div class="col-md-12">
                                    {{ form_widget(form.btnSubmit, {'attr': {'class': 'btn btn-primary btn-rounded w-100'}}) }}
                                </div>
                            </div>
                        {{ form_end(form, {'render_rest': false}) }}

                    </div><!--contact-information-->

                </div><!--col-md-6-->

            </div>
        </div>
    </section>
    
    {% if showMap %}
        <section class="google-map">
            <div class="mapouter">
                <div class="gmap_canvas">
                    <iframe width="100%" height="500" id="gmap_canvas"
                        src="https://maps.google.com/maps?q=2880%20Broadway,%20New%20York&t=&z=13&ie=UTF8&iwloc=&output=embed"
                        frameborder="0" scrolling="no" marginheight="0" marginwidth="0">
                    </iframe>
                    <a href="https://getasearch.com/fmovies"></a><br>
                    <style>
                        .mapouter {
                            position: relative;
                            text-align: right;
                            height: 500px;
                            width: 100%;
                        }
                    </style><a href="https://www.embedgooglemap.net">embedgooglemap.net</a>
                    <style>
                        .gmap_canvas {
                            overflow: hidden;
                            background: none !important;
                            height: 500px;
                            width: 100%;
                        }
                    </style>
                </div>
            </div>
        </section>
    {% endif %}
{% endblock %}